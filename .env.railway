# Railway Environment Configuration
# This file contains environment variables for Railway deployment

# Django Settings
DEBUG=False
DJANGO_SECRET_KEY=your-production-secret-key-change-this

# Database (Railway will auto-generate this)
DATABASE_URL=postgresql://user:password@host:port/database

# Payment Settings (Replace with your actual keys)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Email Settings (Replace with your actual credentials)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email-host-user
EMAIL_HOST_PASSWORD=your-email-host-password
DEFAULT_FROM_EMAIL=ENTstore <your-email@domain.com>
ADMIN_EMAIL=your-admin@email.com

# Security Settings
ALLOWED_HOSTS=.railway.app,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://*.railway.app

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles